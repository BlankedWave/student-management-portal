        .card-container {
            perspective: 1000px;
        }
        .card {
            width: 200px;
            height: 320px;
            position: relative;
            transform-style: preserve-3d;
            transition: transform 0.6s;
        }
        .card.flipped {
            transform: rotateY(180deg);
        }
        .card-face {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
        }
        .card-back {
            transform: rotateY(180deg);
        }
        @keyframes flash {
    0% { opacity: 1; }
    50% { opacity: 0; }
    100% { opacity: 1; }
}
.status-active {
    color: green;
    font-weight: bold;
    animation: flash 1s infinite;
}

        img {
    image-rendering: crisp-edges;
    image-rendering: -moz-crisp-edges;
    image-rendering: -o-crisp-edges;
    image-rendering: -webkit-optimize-contrast;
}


#menu {
    transition: max-height 0.3s ease-in-out, opacity 0.3s ease-in-out;
    max-height: 0;
    opacity: 0;
    overflow: hidden;
}
#menu.show {
    max-height: 200px;
    opacity: 1;
}



body {
    font-family: 'Montserrat', Arial, sans-serif;
}

        .desktop-menu {
            display: none;
        }
        @media (min-width: 768px) {
            .desktop-menu {
                display: flex;
            }
            .mobile-menu {
                display: none;
            }
        }

       nav a {
    padding: 8px 12px;
    border-radius: 4px;
    transition: background-color 0.3s, color 0.3s;
